
# Database Configuration
# Option 1: Use DATABASE_URL (recommended for Render.com and production)
# This is a single connection string that includes all database information
DATABASE_URL=postgresql://username:password@host:5432/database_name

# Option 2: Use individual variables (for local development)
# Uncomment and configure these if not using DATABASE_URL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=betting_analysis
DB_USER=postgres
DB_PASSWORD=your_password_here

# Flask Configuration
# Set to 'development' for local testing, 'production' for deployment
FLASK_ENV=development
PORT=5000

# CORS Configuration
# Comma-separated list of allowed origins (URLs that can access the API)
# For local development:
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# For production, add your dashboard URL:
# CORS_ORIGINS=https://your-dashboard.onrender.com,http://localhost:3000
